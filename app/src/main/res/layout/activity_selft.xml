<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.self.selfActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.healkepdoctor.component.CircleImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/civ_face"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"/>
            <EditText
                android:background="@drawable/rect_radius5_white"
                android:id="@+id/et_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/civ_face"
                app:layout_constraintTop_toTopOf="@id/civ_face"
                android:clickable="true"
                android:enabled="false"/>
            <TextView
                android:background="@null"
                android:id="@+id/tv_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintStart_toEndOf="@id/civ_face"
                app:layout_constraintTop_toTopOf="@id/civ_face"
                android:clickable="true" />
            <TextView
                android:id="@+id/label_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:text="@string/age"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/et_name"
                app:layout_constraintTop_toBottomOf="@id/et_name" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="24"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:enabled="false"
                android:background="@drawable/rect_radius5_white"
                android:clickable="true"
                android:visibility="invisible"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@id/label_age"
                app:layout_constraintTop_toBottomOf="@id/et_name" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:text="24"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@id/label_age"
                app:layout_constraintTop_toBottomOf="@id/et_name" />
            <TextView
                android:id="@+id/label_domain"
                app:layout_constraintTop_toBottomOf="@id/civ_face"
                app:layout_constraintStart_toStartOf="@id/civ_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/domain"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:padding="0dp"
                android:id="@+id/et_domain"
                app:layout_constraintStart_toEndOf="@id/label_domain"
                app:layout_constraintTop_toTopOf="@id/label_domain"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="牙科"
                android:background="@drawable/rect_radius5_white"
                android:textSize="18sp"
                android:clickable="true"
                android:visibility="invisible"
                />
            <TextView
                android:padding="0dp"
                android:id="@+id/tv_domain"
                app:layout_constraintStart_toEndOf="@id/label_domain"
                app:layout_constraintTop_toTopOf="@id/label_domain"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="牙科"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/label_profile"
                app:layout_constraintTop_toBottomOf="@id/label_domain"
                app:layout_constraintStart_toStartOf="@id/label_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="@string/self_introduction"/>

            <EditText
                app:layout_constraintStart_toStartOf="@id/label_profile"
                app:layout_constraintTop_toBottomOf="@id/label_profile"
                android:id="@+id/et_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/rect_radius5_white"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:scrollbars="vertical"
                android:maxLines="8"
                android:minLines="8"
                android:enabled="false"
                android:gravity="top"
                android:clickable="true"
                android:visibility="invisible"
                android:text="1345654161316567879889798748978974897455646512313"
                />
            <TextView
                app:layout_constraintStart_toStartOf="@id/label_profile"
                app:layout_constraintTop_toBottomOf="@id/label_profile"
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:scrollbars="vertical"
                android:maxLines="8"
                android:minLines="8"
                android:gravity="top"
                android:text="1345654161316567879889798748978974897455646512313"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_info"
        app:layout_constraintEnd_toEndOf="@id/cv_info"
        android:layout_marginTop="10dp"
        android:text="@string/accept"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Tips:长按可以进入修改模式。"
        android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>