<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.diet.fragement.dietShowFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="创建饮食方案"
            android:background="@color/purple_500"
            app:titleTextColor="@color/white"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:id="@+id/label_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="饮食计划时间："
            android:textColor="@color/black"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/label_date"
            android:id="@+id/date_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从"
                android:textSize="24sp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_start_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/purple_500"
                android:text="2020"
                android:textSize="18sp"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_start_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/purple_500"
                android:text="12"
                android:textSize="18sp"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:inputType="number"
                android:text="20"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到"
                android:textSize="24sp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_end_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/purple_500"
                android:text="2020"
                android:textSize="18sp"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_end_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/purple_500"
                android:text="12"
                android:textSize="18sp"/>
            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/et_end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:inputType="number"
                android:text="20"
                android:textSize="18sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/date_layout"
            android:id="@+id/rcv_lst"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/purple_500"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/label_total"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:text="合计总能量:"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_total"
                app:layout_constraintStart_toEndOf="@id/label_total"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="24"/>
            <TextView
                app:layout_constraintStart_toEndOf="@id/tv_total"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:text="千焦"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center_vertical"
                app:layout_constraintEnd_toStartOf="@id/tv_upload"
                android:layout_marginEnd="20dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/save"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_upload"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/upload"
                android:textSize="24sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>